{
  "name": "snappy",
  "version": "1.0.0",
  "description": "Snapchat automation tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npx electronmon .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.snappy.app",
    "productName": "Snappy",
    "icon": "build/icons/icon",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**",
      "scripts/**",
      "snappy-venv/**",
      "package.json",
      "!**/*.md",
      "!package-lock.json",
      "!release",
      "!.electronignore"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "build/icons/mac/icon.icns"
    }
  },
  "author": "Shobhit Agarwal",
  "license": "ISC",
  "dependencies": {
    "adbkit": "^2.11.1",
    "electron": "^28.3.3",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  }
}
